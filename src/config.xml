<?xml version='1.0' encoding='utf-8'?>
<widget id="com.github.TeamJedi.JediChat" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>JediChat</name>
    <description>
        The Jedi Chat application to communicate WebRTC to peers
    </description>
    <author email="jedi@blenke.com" href="https://teamjedi.github.io">
        Team Jedi
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.1.0" />
    <engine name="android" spec="~5.2.2" />
</widget>
